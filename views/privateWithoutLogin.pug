extends layout

block title
  title Join

block sections
  .wrapper
  header
    .overlay
      .page-header(style="background-image: url('../static/img/bg.jpg')")
    section.section.section-shaped.section-lg
      .container.pt-lg-7
        .row.justify-content-center
          .col-lg-5
            .card.bg-secondary.shadow.border-0
              .card-body.px-lg-5.py-lg-5
                .text-center.text-muted.mb-4
                  big(style="color: #FFFF;") Enter your nickname 
                  span#errorMsg(style="color:red;display:none")
                  br
                  span#successMsg(style="color:red;") #{message}
                form.form-horizontal.well(role="form", method="get",
                  action=`/privateRoom/room`)
                  fieldset
                      input(type="hidden", name="room", value=`${room}`)
                      input(type="hidden", name="pincode", value=`${pincode}`)
                      .form-group.focused
                        .input-group.input-group-alternative
                          .input-group-prepend
                            span.input-group-text
                              i.ni.ni-lock-circle-open
                          input.form-control#newpassword.is-invalid(type="room", name="name",
                          placeholder="nick name")
                        .text-center
                            button.fanj.btn.btn-primary.my-4.btnCreatePrivateRoom(type="submit") Join