  body
    //navbar
    nav#navbar-main.navbar.navbar-main.navbar-expand-lg.navbar-transparent.navbar-light.headroom
      .container
        a.navbar-brand.mr-lg-5(href='/')
          h1.fanj.text-white.display-4 Aiolys
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbar_global' aria-controls='navbar_global' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbar_global.navbar-collapse.collapse
          .navbar-collapse-header
            .row
              .col-6.collapse-brand
                a(href='/')
                  h1.fanj.display-4 Aiolys
              .col-6.collapse-close
                button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbar_global' aria-controls='navbar_global' aria-expanded='false' aria-label='Toggle navigation')
                  span
                  span
          ul.navbar-nav.align-items-lg-center.ml-lg-auto
            li.nav-item
              a.nav-link.nav-link-icon(href='https://www.facebook.com/' target='_blank' data-toggle='tooltip' title='Like us on Facebook')
                i.fa.fa-facebook-square
                span.nav-link-inner--text.d-lg-none Facebook
            li.nav-item
              a.nav-link.nav-link-icon(href='https://www.instagram.com/' target='_blank' data-toggle='tooltip' title='Follow us on Instagram')
                i.fa.fa-instagram
                span.nav-link-inner--text.d-lg-none Instagram
            li.nav-item
              a.nav-link.nav-link-icon(href='https://twitter.com/' target='_blank' data-toggle='tooltip' title='Follow us on Twitter')
                i.fa.fa-twitter-square
                span.nav-link-inner--text.d-lg-none Twitter
            li.nav-item.d-none.d-lg-block.ml-lg-4
              - if (locals.loggedin)
                li.nav-item.dropdown
                  button#dropdownMenuButton.fanj.btn.btn-outline-white.dropdown-toggle(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                    | Profile
                  .dropdown-menu(aria-labelledby='dropdownMenuButton')
                    a.fanj.dropdown-item(href=`/user/${loggedin}`, target="_blank") Profile
                    a.fanj.dropdown-item(href=`/changepasswd?followup=/${roomname}`) Change password
                    a.fanj.dropdown-item(href="/logout") Logout 
              - else
                  a.fanj.btn.btn-outline-white.btn-round(href="/Login") Login
