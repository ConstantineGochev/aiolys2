extends layout

block title
  title change password

block sections
  .wrapper
  header
    .overlay
      .page-header(style="background-image: url('./static/img/bg.jpg')")
    section.section.section-shaped.section-lg
      .container.pt-lg-7
        .row.justify-content-center
          .col-lg-5
            .card.bg-secondary.shadow.border-0
              .card-body.px-lg-5.py-lg-5
                .text-center.text-muted.text-white.mb-4
                  small Enter your desired NEW password
                form.form-horizontal.well(role="form", method="post",
                  action=`/changepasswd?followup=${followup}`)
                  fieldset
                    - if (locals.errors)
                      - if (errors.oldpassword)
                        .form-group.focused
                          .input-group.input-group-alternative
                            .input-group-prepend
                              span.input-group-text
                                i.ni.ni-lock-circle-open
                            input.form-control#oldpassword.is-invalid(type="password", name="oldpassword",
                            placeholder="current password")
                            .invalid-tooltip #{errors.oldpassword}
                      - else
                        .form-group.focused
                          .input-group.input-group-alternative
                            .input-group-prepend
                              span.input-group-text
                                i.ni.ni-lock-circle-open
                            input.form-control#oldpassword.is-invalid(type="password", name="oldpassword",
                            placeholder="current password")
                      - if (errors.newpassword)
                        .form-group.focused
                          .input-group.input-group-alternative
                            .input-group-prepend
                              span.input-group-text
                                i.ni.ni-lock-circle-open
                            input.form-control#newpassword.is-invalid(type="password", name="newpassword",
                            placeholder="new password")
                            .invalid-tooltip #{errors.newpassword}
                      - else
                        .form-group.focused
                          .input-group.input-group-alternative
                            .input-group-prepend
                              span.input-group-text
                                i.ni.ni-lock-circle-open
                            input.form-control#newpassword.is-invalid(type="password", name="newpassword",
                            placeholder="new password")
                    - else
                      .form-group.focused
                        .input-group.input-group-alternative
                          .input-group-prepend
                            span.input-group-text
                              i.ni.ni-lock-circle-open
                          input.form-control#oldpassword.is-invalid(type="password", name="oldpassword",
                          placeholder="current password")
                      .form-group.focused
                        .input-group.input-group-alternative
                          .input-group-prepend
                            span.input-group-text
                              i.ni.ni-lock-circle-open
                          input.form-control#newpassword.is-invalid(type="password", name="newpassword",
                          placeholder="new password")
                    .text-center
                      button.fanj.btn.btn-primary.my-4(type="submit") Update